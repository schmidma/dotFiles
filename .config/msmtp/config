defaults
auth    on
tls on
tls_trust_file  /etc/ssl/certs/ca-certificates.crt

# Mailbox
account Mailbox
host    smtp.mailbox.org
port    587
from    schmidma@mailbox.org
user    schmidma@mailbox.org
passwordeval "/usr/bin/pass first-line E-Mail/mailbox.org"


# TUHH
account TUHH
host    mail.tu-harburg.de
port    587
from    maximilian.schmidt@tuhh.de
user    cfa9884
passwordeval "/usr/bin/pass TUHH/TUHH | head -n 1"

# TUD
account TUDelft
tls_starttls    off
host    smtp-a.tudelft.nl
port    465
from    m.s.schmidt@tudelft.nl
user    msschmidt@tudelft.net
passwordeval "/usr/bin/pass first-line TUDelft/TUDelft"

account default : Mailbox
