[Repository LocalTUHH]
type = Maildir
localfolders = ~/.mails/TUHH

[Repository RemoteTUHH]
type = IMAP
ssl = yes
sslcacertfile = OS-DEFAULT
remotehost = mail.tu-harburg.de
remoteuser = cfa9884
remotepasseval = get_credentials("TUHH")
remoteport = 993
