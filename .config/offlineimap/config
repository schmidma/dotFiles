holdconnectionopen = yes
keepalive = 60

# Automatic mailbox generation for mutt
[mbnames]
enabled  = yes
filename = ~/.cache/offlineimap/mailboxes
header   = "mailboxes "
peritem  = "+%(accountname)s/%(foldername)s"
sep      = " "
footer   = "\n"
